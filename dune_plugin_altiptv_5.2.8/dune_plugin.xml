<dune_plugin>
	<global_actions>
		<install>
		<type>plugin_system</type>
			<data>
			<run_string>bin/prepare2.sh &amp;</run_string>
			</data>
		</install>
	</global_actions>
  <name>altiptv</name>
  <caption>altIPTV</caption>
  <auto_resume>
    <enable>yes</enable>
  </auto_resume>
  <entry_points>
    <entry_point>
        <parent_media_url>root://tv</parent_media_url>
        <media_url>tv_group_list</media_url>
        <caption>altIPTV</caption>
        <icon_url>plugin_file://icons/logo.png</icon_url>
		<badge_icon_url>plugin_file://icons/default.png</badge_icon_url>
        <actions>
          <key_enter>
            <type>plugin_handle_user_input</type>
            <params>
               <handler_id>entry</handler_id>
            </params>
          </key_enter>
          <key_play>
            <type>plugin_open_folder</type>
          </key_play>
        </actions>
        <ip_address_required>yes</ip_address_required>
        <show_cookie_name>show_tv</show_cookie_name>
        <show_by_default>yes</show_by_default>
    </entry_point>
    <entry_point>
        <parent_media_url>setup://applications</parent_media_url>
        <media_url>setup</media_url>
        <caption>altIPTV</caption>
        <icon_url>plugin_file://icons/logo2.png</icon_url>
		<badge_icon_url>plugin_file://icons/default.png</badge_icon_url>
        <actions>
          <key_enter>
            <type>plugin_open_folder</type>
          </key_enter>
        </actions>
    </entry_point>
  </entry_points>
  <type>php</type>
  <params>
     <program>altiptv.php</program>
  </params>
  <version_index>49</version_index>
  <version>5.2.8 (19.09.16)</version>
  <check_update>
    <schema>1</schema>
    <url>http://dune-club.info/plugins/update/altiptv3/update5.txt</url>
    <timeout>0</timeout>
  </check_update>
</dune_plugin>
